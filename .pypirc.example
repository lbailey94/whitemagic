# Example PyPI Configuration
# Copy this to ~/.pypirc and fill in your API tokens
# 
# Generate tokens at:
#   Production: https://pypi.org/manage/account/token/
#   Test: https://test.pypi.org/manage/account/token/
#
# After creating ~/.pypirc, run:
#   chmod 600 ~/.pypirc

[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = __token__
password = pypi-AgE...YOUR_PRODUCTION_TOKEN_HERE...

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = pypi-AgE...YOUR_TEST_TOKEN_HERE...
