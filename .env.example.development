# WhiteMagic Development Configuration
# Copy this file to .env for local development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (default, easiest for development)
DATABASE_URL=sqlite+aiosqlite:///./whitemagic_dev.db

# PostgreSQL (for production-like testing)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/whitemagic_dev

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================

# Redis for rate limiting and caching
# Start with: docker run -d -p 6379:6379 redis:7-alpine
REDIS_URL=redis://localhost:6379

# Enable/disable rate limiting
ENABLE_RATE_LIMITING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Terminal exec API - KEEP DISABLED unless specifically needed
# WARNING: Allows arbitrary command execution!
WM_ENABLE_EXEC_API=false

# API key for development (generate your own for production)
# WM_API_KEY=wm_dev_your_development_key_here

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
WM_LOG_LEVEL=DEBUG

# Log format: json or text
WM_LOG_FORMAT=text

# Log to file
# WM_LOG_FILE=./whitemagic_dev.log

# =============================================================================
# WHOP INTEGRATION (Optional)
# =============================================================================

# Whop API for monetization (leave empty if not using)
# WHOP_API_KEY=your_whop_api_key_here
# WHOP_WEBHOOK_SECRET=your_webhook_secret_here
# WHOP_COMPANY_ID=your_company_id

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================

# Server host and port
WM_HOST=0.0.0.0
WM_PORT=8000

# Enable auto-reload (development only)
WM_RELOAD=true

# Workers (1 for development, more for production)
WM_WORKERS=1

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Use * for development only!
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# MEMORY STORAGE
# =============================================================================

# Base path for memory storage
WM_BASE_PATH=./memory

# Enable automatic backups
WM_AUTO_BACKUP=true

# Backup retention days
WM_BACKUP_RETENTION_DAYS=30

# =============================================================================
# EMBEDDING CONFIGURATION (Optional)
# =============================================================================

# OpenAI API key for semantic search (optional)
# OPENAI_API_KEY=sk-your_openai_api_key_here

# Embedding model
# EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================

# Enable debug mode
DEBUG=true

# Enable API documentation
ENABLE_API_DOCS=true

# Enable development endpoints
ENABLE_DEV_ENDPOINTS=true

# =============================================================================
# RATE LIMITING (Development)
# =============================================================================

# Requests per hour for development
RATE_LIMIT_PER_HOUR=1000

# Rate limit by IP in development
RATE_LIMIT_BY_IP=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database (used by pytest)
# TEST_DATABASE_URL=sqlite+aiosqlite:///./test_whitemagic.db

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Copy this file to .env: cp .env.example.development .env
# 2. Update values as needed for your environment
# 3. Never commit .env to version control!
# 4. For production, use .env.example as template
# 5. Generate strong API keys for production
# 6. Always keep WM_ENABLE_EXEC_API=false unless absolutely needed
#
# Quick start:
#   1. cp .env.example.development .env
#   2. docker run -d -p 6379:6379 redis:7-alpine
#   3. uvicorn whitemagic.api.app:app --reload
#   4. Visit http://localhost:8000/docs
#
# =============================================================================
