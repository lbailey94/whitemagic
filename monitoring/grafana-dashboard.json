{
  "dashboard": {
    "title": "WhiteMagic Performance Dashboard",
    "tags": ["whitemagic", "performance", "rust"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(whitemagic_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(whitemagic_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Rust vs Python Speedup",
        "type": "graph",
        "targets": [
          {
            "expr": "whitemagic_rust_speedup_ratio",
            "legendFormat": "{{operation}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Rust Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(whitemagic_rust_operations_total[5m]))"
          }
        ]
      },
      {
        "id": 5,
        "title": "File Processing Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "whitemagic_processing_rate_files_per_second",
            "legendFormat": "{{engine}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "whitemagic_active_connections"
          }
        ]
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(whitemagic_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors"
          }
        ]
      },
      {
        "id": 8,
        "title": "System Health",
        "type": "stat",
        "targets": [
          {
            "expr": "whitemagic_system_health"
          }
        ]
      }
    ]
  }
}
