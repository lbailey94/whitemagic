# WhiteMagic Configuration
# Copy this file to .env and customize values

# ============================================================================
# DATABASE
# ============================================================================

# SQLite (Development)
DATABASE_URL=sqlite+aiosqlite:///./whitemagic_dev.db

# PostgreSQL (Production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/whitemagic

# ============================================================================
# REDIS (Optional - for rate limiting)
# ============================================================================

# Leave commented to disable rate limiting in development
# REDIS_URL=redis://localhost:6379

# Redis with authentication
# REDIS_URL=redis://:password@localhost:6379

# ============================================================================
# CORS & SECURITY
# ============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com

# For multiple origins, provide a comma-separated list:
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# MEMORY STORAGE
# ============================================================================

# Base path for memory files
WM_BASE_PATH=.

# For production, use absolute path:
# WM_BASE_PATH=/var/lib/whitemagic

# ============================================================================
# ADMIN BOOTSTRAP (First-time setup)
# ============================================================================

# Seed an admin API key on first startup (optional)
# If set, this key will be created automatically with admin privileges
# WM_SEED_ADMIN_KEY=wm_prod_bootstrap_admin_key_here
# WM_SEED_ADMIN_EMAIL=admin@yourdomain.com

# ============================================================================
# RATE LIMITING
# ============================================================================

# Rate limit headers are automatically added to responses:
# X-RateLimit-Limit: 10000 (requests per day)
# X-RateLimit-Remaining: 9999
# Retry-After: 3600 (seconds until reset)

# ============================================================================
# WHOP INTEGRATION (Phase 2A)
# ============================================================================

# Whop API credentials (obtain from https://whop.com/developers)
# WHOP_API_KEY=your_api_key_here
# WHOP_WEBHOOK_SECRET=your_webhook_secret_here

# Whop environment
# WHOP_ENV=production

# ============================================================================
# Logging & Observability
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text (use json for production)

# ============================================================================
# OPTIONAL: Sentry Error Tracking
# ============================================================================
# To enable Sentry: pip install "sentry-sdk[fastapi]>=1.38.0"
# Then set these variables. See: docs/production/OPTIONAL_INTEGRATIONS.md

# SENTRY_DSN=https://public@sentry.io/123456
# SENTRY_TRACES_SAMPLE_RATE=0.1  # 0.0 to 1.0 (% of requests to trace)
# SENTRY_RELEASE=whitemagic-2.1.0
# ENVIRONMENT=production

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API host and port
# HOST=0.0.0.0
# PORT=8000

# Number of worker processes (uvicorn)
# WORKERS=4

# Enable API documentation in production
# DOCS_ENABLED=false

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Echo SQL statements (useful for debugging)
# SQL_ECHO=true

# Enable auto-reload (development only)
# RELOAD=true
